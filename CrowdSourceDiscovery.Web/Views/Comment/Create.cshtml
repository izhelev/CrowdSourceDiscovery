@model CrowdSourceDiscovery.Web.Models.CommentFormModel

@{
    ViewBag.Title = "Create";
}
<div class="row">
    <div>
        <p>
            <a href="@Url.Action("Details", "Connection", new { id = Model.ConnectionId })" class="btn btn-default"><span class="glyphicon glyphicon-arrow-left"> back to connection </span></a>
        </p>
    </div>
</div>

<h2>New comment</h2>
<hr/>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.ConnectionId)

            <div class="form-group">
                @Html.LabelFor(model => model.Text, new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.TextAreaFor(model => model.Text, new
                    {
                        @class = "form-control",
                        @rows = 10 
                    })
                    @Html.ValidationMessageFor(model => model.Text)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
